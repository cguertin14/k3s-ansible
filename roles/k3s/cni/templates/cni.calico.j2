{
    "name": "any_name",
    "cniVersion": "0.1.0",
    "type": "calico",
    "kubernetes": {
        "kubeconfig": "/home/{{ ansible_user }}/.kube/config",
        "node_name": "{{ new_hostname }}"
    },
    "policy": {
        "type": "k8s"
    },
    "ipam": {
        "type": "calico-ipam",
        "assign_ipv4": "true",
        "ipv4_pools": ["10.0.0.0/24", "20.0.0.0/16", "default-ipv4-ippool"]
    },
    "container_settings": {
        "allow_ip_forwarding": true
    }
}